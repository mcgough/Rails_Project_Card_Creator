<h1><%= @player.name %></h1>
<div class='row'>
  <div class='col-md-4 col-md-offset-4'>
    <table class='players-index'>
      <tr>
        <td class='td-width'><%= @player.team %></td>
      </tr>
      <tr>
        <td class='td-width'><%= @player.position %></td>
      </tr>
    </table>
  </div>
</div>

<div class='row'>
  <div class='col-md-4 col-md-offset-4'>
    <h2 class='text-center'>Tagged</h2>
    <table>
      <% @tags.each do |n| %>
      <tr>
        <td class='td-width'>
          <%= link_to n.name, tag_path(n.id) %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
<div class='row  text-center'>
  <%= link_to '', edit_player_path, :class =>'btn btn-primary glyphicon glyphicon-pencil' %>
  <%= link_to '', player_path, :class =>'btn btn-danger glyphicon glyphicon-trash danger',
        method: :delete,
        data: {confirm: 'Are you sure?'} %>
</div>