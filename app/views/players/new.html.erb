<h1 class='text-center new-card-title'>Create a New Card</h1>

<div class='col-md-4 col-md-offset-4'>
<%= bootstrap_form_for (@player) do |f| %>

  <%= f.text_field :name, placeholder: "Player's Name" %>

  <%= f.text_field :team, placeholder: "Player's Team" %>

  <%= f.text_field :position, placeholder: "Player's Position" %>

  <%= f.collection_check_boxes :tags, @tags, :id, :name %>
  <%= f.submit 'Submit', :class => 'btn btn-primary' %>
</div>
<% end %>

