<div class='row'>
  <h1 class='text-center new-tag-title'>Create a New Tag</h1>
</div>
<div class='row col-md-4 col-md-offset-4'>
  <%= bootstrap_form_for @tag do |f| %>
    <%= f.text_field :name, placeholder: 'Enter the new tag' %>
    <%= f.submit 'Submit', :class => 'btn btn-primary' %>
  <% end %>
</div>